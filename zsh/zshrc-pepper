# Path to your oh-my-zsh installation.
export ZSH=/home/onibrow/.oh-my-zsh

LS_COLORS="di=1;32"

# Timezone
TZ='America/Los_angeles'; export TZ

ZSH_THEME="onibrow-meat"

HYPHEN_INSENSITIVE="true"
DISABLE_AUTO_TITLE="true"
export ZSH_CUSTOM="/home/onibrow/Documents/dot-files/zsh"

# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
# Custom plugins may be added to ~/.oh-my-zsh/custom/plugins/
# Example format: plugins=(rails git textmate ruby lighthouse)
# Add wisely, as too many plugins slow down shell startup.
plugins=(git)

# User configuration

export PATH="/home/onibrow/.anaconda3/bin:/usr/local/sbin:/usr/local/bin:/usr/bin:/usr/bin/site_perl:/usr/bin/vendor_perl:/usr/bin/core_perl:/usr/lib/jvm/java-8-openjdk/bin:/usr"

# export MANPATH="/usr/local/man:$MANPATH"

source $ZSH/oh-my-zsh.sh

